<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:background="@drawable/item_background_rounded">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hiển thị hình ảnh của loại hạng mục -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgHangMucItem"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/hamburger" />

            <TextView
                android:id="@+id/txtTenHangMucItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Tên loại hạng mục"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtSoTienHangMucItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="Tên loại hạng mục"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

        <!-- Hiển thị chữ của loại hạng mục -->

        <!-- RecyclerView con cho các hạng mục -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewNgayGio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>